<div>
    <div class="albums">
        {{#each albums}}
            <div class="album">
                 {{#if this.images}}
                <img src="{{this.images.2.url}}" alt="{{this.name}}">
            {{else}}
                <img src="https://user-images.githubusercontent.com/25275745/82283218-ba9ec200-9963-11ea-9fc8-8408b57bef12.png"
                    alt="{{this.name}}" style="width: 160px">
            {{/if}}
                <h2>{{this.name}}</h2>
                <button>
                    <a href="/tracks/{{this.id}}">View Songs</a>
                </button>
            </div>
        {{/each}}
    </div>
</div>